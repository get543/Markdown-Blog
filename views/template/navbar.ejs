<!-- TAKEN FROM PORTFOLIO WEBSITE -->

<!-- Navbar Start -->
<header class="bg-transparent absolute top-0 left-0 w-full flex items-center z-10">
  <div class="container">
    <div class="flex items-center justify-between relative">
      <a href="/" class="font-bold text-lg text-primary block py-6"> <%= subtitle %> </a>
      <div class="flex items-center px-4">
        <!-- HAMBURGER LINE -->
        <button
          id="hamburger"
          name="hamburger"
          type="button"
          class="block absolute right-4 lg:hidden"
          onclick="toggleNavMenu()"
        >
          <span class="hamburger-line transition duration-300 ease-in-out origin-top-left"></span>
          <span class="hamburger-line transition duration-300 ease-in-out"></span>
          <span
            class="hamburger-line transition duration-300 ease-in-out origin-bottom-left"
          ></span>
        </button>

        <nav
          id="nav-menu"
          class="hidden absolute py-6 bg-white dark:bg-dark shadow-lg rounded-lg max-w-[250px] w-full right-4 top-full lg:block lg:static lg:bg-transparent lg:max-w-full lg:shadow-none lg:rounded-xl"
        >
          <ul class="block lg:flex">
            <li class="group">
              <a
                href="/"
                class="text-base text-dark dark:text-white py-2 mx-8 flex group-hover:text-primary"
                >Home</a
              >
            </li>
            <li class="group">
              <a
                href="/about"
                class="text-base text-dark dark:text-white py-2 mx-8 flex group-hover:text-primary"
                >About</a
              >
            </li>
            <li class="group">
                <a
                  href="/contact"
                  class="text-base text-dark dark:text-white py-2 mx-8 flex group-hover:text-primary"
                  >Contact</a
                >
              </li>
            <li class="group">
              <a
                href="/login"
                class="text-base text-dark dark:text-white py-2 mx-8 flex group-hover:text-primary"
                >Login</a
              >
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
<!-- Navbar End -->
